<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TopSpaceMAUI.AdminPageImageViewer"
             Title="AdminPageImageViewer">

    <Frame VerticalOptions="Center"
        HorizontalOptions="Center"
        Padding="20"
        CornerRadius="20"
        HasShadow="True">

        <VerticalStackLayout 
            WidthRequest="{OnPlatform Android=350, iOS=900}" 
            HeightRequest="{OnPlatform Android=500, iOS=700}"
            Padding="5"
            BackgroundColor="{StaticResource Gray600}"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Spacing="0">

            <Image x:Name="ImageView" Aspect="Fill" HeightRequest="640" />

            <Button Text="Fechar" Clicked="Button_Clicked" Margin="0,5,0,0" BackgroundColor="{StaticResource Primary}" TextColor="White" />

        </VerticalStackLayout>
        
    </Frame>

</ContentPage>
