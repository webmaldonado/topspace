<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="TopSpaceMAUI.ImagePopup">

    <VerticalStackLayout 
        WidthRequest="{OnPlatform Android=350, iOS=900}" 
        HeightRequest="{OnPlatform Android=500, iOS=700}"
        Padding="5"
        BackgroundColor="{StaticResource Gray600}"
        HorizontalOptions="Center"
        VerticalOptions="Start"
        Spacing="0">

        <Image x:Name="FullImage" Aspect="Fill" HeightRequest="640" />

        <Button Text="Fechar" Clicked="ClosePopup" Margin="0,5,0,0" BackgroundColor="{StaticResource Primary}" TextColor="White" />

    </VerticalStackLayout>

</toolkit:Popup>
