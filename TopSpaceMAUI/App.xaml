<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TopSpaceMAUI"
             x:Class="TopSpaceMAUI.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

          <ControlTemplate x:Key="MyContentFooter">
            <Grid RowDefinitions="*,Auto">
              <ScrollView Grid.Row="0">
                <ContentPresenter/>
              </ScrollView>
              <ContentView BackgroundColor="{StaticResource Primary}" Grid.Row="1" HeightRequest="50" Margin="8,4">
                    <Label Text="Bayer SA © 2024 All Rights Reserved" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"></Label>
              </ContentView>
            </Grid>
          </ControlTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
